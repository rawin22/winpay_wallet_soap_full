@using Tsg.UI.Main.App_LocalResources
@model Tsg.UI.Main.Models.NewInstantPaymentViewModel

@{
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
    ViewBag.Title = ViewBag.RepeatPayment == true ? GlobalRes.PaymentCreatePage_TitleRepeat : GlobalRes.PaymentCreatePage_TitleNew;
}
<div class="row">
    @if (Model.HasError)
    {
        <div class="alert alert-danger">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true" id="btn-close-message">×</button>
            @foreach (var error in Model.Errors)
            {
                <p class="m-none text-weight-semibold h6">@error.MessageDetails</p>
            }
        </div>
    }
    @if (!Model.HasError && Model.Errors.Count > 0)
    {
        <div class="alert alert-danger">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true" id="btn-close-message">×</button>

            @foreach (var error in Model.Errors)
            { 
                <p class="m-none text-weight-semibold h6">@error.MessageDetails</p>
            }
        </div>
    }

    @Html.Partial("WebParts/NewInstantPaymentForm", Model)
</div>