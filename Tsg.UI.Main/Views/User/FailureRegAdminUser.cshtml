@using Tsg.UI.Main.App_LocalResources
@model Tsg.UI.Main.Models.AdminModel

@{
    ViewBag.Title = "Admin Registration";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

@using (Html.BeginForm("AddAdminUser", "User", FormMethod.Post, new { Model }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <section class="panel  @(ViewBag.OpenPanel != null ? "" : "panel-featured panel-featured-info")">

            <header class="panel-heading" data-panel-toggle="">
                <div class="panel-actions">
                    <a href="#" class="panel-action panel-action-toggle" data-panel-toggle=""></a>
                </div>

                <h2 class="panel-title">Add new admin</h2>
                <p class="panel-subtitle">Please fill in the detail below to create an Admin</p>
            </header>
            @if (ViewBag.ErrorMessage != null)
            { 
                <div class="alert alert-danger">
                    <p class="m-none text-weight-semibold h6">@ViewBag.ErrorMessage</p>
                </div>
            }                       
                        
            <div class="panel-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(h=>h.Id)
                <div class="form-group">
                    <label class="col-sm-3 control-label">Username <span class="required" aria-required="true">*</span></label>
                    <div class="col-sm-3">
                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control", required = "" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label">First Name <span class="required" aria-required="true">*</span></label>
                    <div class="col-sm-3">
                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", required = "" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">Last Name <span class="required" aria-required="true">*</span></label>
                    <div class="col-sm-3">
                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", required = "" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">Email <span class="required" aria-required="true">*</span></label>
                    <div class="col-sm-3">
                        @Html.TextBoxFor(m => m.MailAddress, new { @class = "form-control", required = "", type = "email" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-3 col-md-10" style="color: green">
                        @ViewBag.Message
                    </div>
                </div>

            </div>

            <footer class="panel-footer">
                <div class="row">
                    <div class="col-sm-9 col-sm-offset-3">
                        <input type="submit" class="btn btn-success" value="Add" />
                       
                    <a class="btn btn-success" href="@HttpContext.Current.Request.UrlReferrer">@GlobalRes.AddCurrencyPage_Back</a>
                       
                    </div>
                </div>
            </footer>

        </section>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
