                <div class="col-md-8">@Html.TextBoxFor(m=>m.UploadProofInternalMail, Model.UploadProofInternalMail, new {@class = "form-control"})
                </div>
                <div class="col-md-2"><input class="btn btn-info" type="submit" value="Change"/></div>
            }
            <div id="results">

            </div>
        </div>
    </section>
</div>

