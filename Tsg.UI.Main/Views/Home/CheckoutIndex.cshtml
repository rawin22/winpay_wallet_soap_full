@using Tsg.UI.Main.App_LocalResources
@model Tsg.UI.Main.Models.CheckoutModel

@{
    Layout = "~/Views/Shared/_LayoutCheckout.cshtml";
    ViewBag.Title = GlobalRes.HomeCheckoutIndexPage_Title;
}
<script type="text/javascript" src="/Content/assets/vendor/jquery/jquery.js"></script>



