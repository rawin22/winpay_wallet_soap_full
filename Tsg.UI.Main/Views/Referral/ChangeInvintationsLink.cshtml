@using Tsg.UI.Main.App_LocalResources
@model Tsg.UI.Main.Models.ReferalLinks
@{
    ViewBag.Title = GlobalRes.ReferralChangeInvintationsLinkPage_Title;
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
<script src="/Content/assets/vendor/jquery/jquery.js"></script>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <section class="panel  @(ViewBag.OpenPanel != null ? "" : "panel-featured panel-featured-info")">

            <header class="panel-heading" data-panel-toggle="">
                <div class="panel-actions">
                    <a href="#" class="panel-action panel-action-toggle" data-panel-toggle=""></a>
                </div>
                <h2 class="panel-title">@GlobalRes.ReferralChangeInvintationsLinkPage_Title</h2>
                <p class="panel-subtitle">@GlobalRes.ReferralChangeInvintationsLinkPage_SubTitle</p>
            </header>
            <div class="panel-body">
                @Html.HiddenFor(h=>h.Id)
                <div class="form-group">
                    <label class="col-sm-3 control-label">@GlobalRes.ReferralChangeInvintationsLinkPage_ReferalLink</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(m => m.LinkText, Model.LinkText, new {@class = "form-control"})
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-3 col-md-10" style="color: green">
                        @ViewBag.Message
                    </div>
                </div>

            </div>

            <footer class="panel-footer">
                <div class="row">
                    <div class="col-sm-9 col-sm-offset-3">
                        <input type="submit" class="btn btn-success" value="@GlobalRes.ReferralChangeInvintationsLinkPage_UpdateLink" />
                        <a class="btn btn-success" href="@HttpContext.Current.Request.UrlReferrer">@GlobalRes.ReferralChangeInvintationsLinkPage_Back</a>
                    </div>
                </div>
            </footer>

        </section>
    </div>
}